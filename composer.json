{
    "name": "laravel/laravel",
    "description": "The skeleton application for the Laravel framework.",
    "license": "MIT",
    "type": "project",
    "version": "1.0.0",
    "keywords": [
        "laravel",
        "framework"
    ],
    "require": {
        "php": "^8.4",
        "ext-pdo": "*",
        "defstudio/telegraph": "^1.56.3",
        "dragon-code/laravel-deploy-operations": "^7.0",
        "dragon-code/laravel-json-response": "^3.0.1",
        "graham-campbell/github": "^13.0",
        "laravel-lang/locale-list": "^1.4",
        "laravel/framework": "^12.0",
        "laravel/tinker": "^2.10.1",
        "sentry/sentry-laravel": "^4.12.0",
        "spatie/laravel-data": "^4.13.0",
        "steppinghat/emoji-detector": "^1.7.0"
    },
    "require-dev": {
        "dragon-code/codestyler": "^6.3",
        "laravel-lang/common": "^6.4",
        "laravel/telescope": "^5.5.0",
        "nunomaduro/collision": "^8.6.1"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "symfony/thanks": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan vendor:publish --tag=telescope-assets --ansi --force",
            "@php artisan lang:update",
            "@php vendor/bin/codestyle pint 8.4",
            "@php vendor/bin/codestyle editorconfig",
            "composer normalize"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "style": "vendor/bin/pint --parallel"
    }
}
